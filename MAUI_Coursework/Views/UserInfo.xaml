<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Coursework.Views.UserInfo"
             Title="UserInfo">
    <ScrollView>
        <StackLayout x:Name="StackL">
            <Entry x:Name="LoginEntry" Placeholder="Логин" FontSize="Large" Margin="10"/>
            <Entry x:Name="PasswordEntry" Placeholder="Новый пароль" FontSize="Large" Margin="10" Text=""/>
            <Entry x:Name="NameEntry" Placeholder="Имя" FontSize="Large" Margin="10"/>
            <Entry x:Name="SunameEntry" Placeholder="Фамилия" FontSize="Large" Margin="10"/>
            <Entry x:Name="PatronymicEntry" Placeholder="Отчество" FontSize="Large" Margin="10"/>
            <Entry x:Name="GroupEntry" Placeholder="Группа" FontSize="Large" Margin="10"/>
            <Button x:Name="BttnSave" Text="Сохранить" Clicked="BttnSave_Clicked" Margin="10"/>
            
        </StackLayout>
    </ScrollView>
</ContentPage>