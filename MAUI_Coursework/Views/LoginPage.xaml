<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Coursework.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Spacing="30" Margin="10" Padding="0,0,0,0">
        <Label 
            Text="Welcome to .NE435T MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="login_entry" Placeholder="Логин" Margin="20,0" FontSize="Medium" Keyboard="Text" Text=""/>
        <Entry x:Name="password_entry" Placeholder="Пароль" Margin="20,0" FontSize="Medium" IsPassword="true" Text=""/>
        <Button Text="Войти" Clicked="Login_Clicked" />
        <Button Text="Регистрация" Clicked="Registration_Clicked"/>
        <Button Text="HardLogin" Clicked="HardLogin_Clicked"/>
    </VerticalStackLayout>
</ContentPage>